html
  overflow hidden
body
  overflow hidden
  background-color #222222

#container
  position absolute
  top 0
  left 0
  width 100%
  height 100%

.enter-name,
.waiting
  width 350px
  height 65px
  top 214px
  left 182px
  text-align center

.enter-name
  background-image url('/images/whats-name-label.png')
  background-repeat no-repeat
  background-position center 4px
  input
    margin-top 32px
    width 350px
    height 30px
    background-image url('/images/black-pixel.png')
    background-color transparent
    background-repeat repeat
    border none

.waiting, input, .players
  color #DDDDDD
  text-align center
  font-size 20px
  font-family 'tahoma'

.waiting
  display none

#wrapper
  width 970px
  height 585px
  background-image url('/images/background-image.png')
  background-repeat no-repeat
  position absolute
  box-shadow(2px 2px 15px #000000)

  canvas,
  .logo,
  .info,
  .controls,
  .enter-name,
  .waiting,
  .players,
  .winning
    position absolute

  canvas
    width 480px
    height 416px
    top 86px
    left 118px
    display none

  .info
    width 210px
    height 240px
    top 165px
    right 130px
    font-size 13px
    font-family 'tahoma'
    color #444444
    text-shadow(0 0 2px #FFFFFF)

    p
      margin 0 0 10px 0

.players,
.info
  width 210px
  height 240px
  top 165px
  right 130px

.players
  overflow visible
  color #444444
  text-align left
  li
    height 35px
    padding 10px 0 10px 45px
    background-repeat no-repeat
    background-position 0 center
    &.green
      background-image url('/images/green-tile.png')
    &.pink
      background-image url('/images/pink-tile.png')
    &.blue
      background-image url('/images/blue-tile.png')
    &.orange
      background-image url('/images/orange-tile.png')

.winning
  display none
  cursor pointer
  width 696px
  height 284px
  top 151px
  left 140px
  background-image url('/images/play-again-overlay.png')
  background-repeat no-repeat
  background-position center center
  z-index 9000 // over 9000!!!